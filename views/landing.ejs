<%include partials/header%>

	<div class="page-wrap container">
		<div id="title-box">
			<h1>The best rap lyrics for your Instagram Captions</h1>
			<h2>What vibe of rap lyric are you looking for?</h2>

			<form action="/" method="GET">
				<div id="category-buttons">
					<input type="radio" name="category" id="categoryAll" value="All" checked="">
					<label for="categoryAll">All</label>
					<input type="radio" name="category" id="categoryBae" value="Bae">
					<label for="categoryBae">Bae ❤️</label>
					<input type="radio" name="category" id="categoryFeels" value="Feels">
					<label for="categoryFeels">Feels 😢</label>
					<input type="radio" name="category" id="categoryLit" value="Lit">
					<label for="categoryLit">Lit 🔥</label>
					<input type="radio" name="category" id="categorySavage" value="Savage">
					<label for="categorySavage">Savage 😈</label>
					<input type="radio" name="category" id="categorySquad" value="Squad">
					<label for="categorySquad">Squad 👨‍👨‍👦‍👦</label>
					<input type="radio" name="category" id="categoryIDFWU" value="IDFWU">
					<label for="categoryIDFWU">IDFWU ⛔️</label>
				</div>
				<button type="submit" id="generate-button">Generate ✓</button>
			</form>
		</div>

		<script>
			if ("<%=caption.lyric%>" != "") {
				var category = "category" + "<%=caption.category%>";
				document.getElementById(category).checked = true;
			} else {
				document.getElementById("categoryAll").checked = true;
			}
		</script>

		<div id="lyric-box">
			<!-- <div id="quote-box">
				<img id="left-quote" src="images/left-quote.svg">
				<img id="right-quote" src="images/right-quote.svg">
			</div> -->
			<h3 id="displayLyric">
				<%=caption.lyric%>
			</h3>
			<h4 id="displaySong">
				<%=caption.song%>
			</h4>
			<h4 id="author">
				<%=caption.author%>
			</h4>
		</div>
	</div>

